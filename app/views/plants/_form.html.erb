<%= form_for(@plant, {html: {class: 'form-horizontal'}}) do |f| %>
  <% if @plant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plant.errors.count, "error") %> prohibited this plant from being saved:</h2>

      <ul>
      <% @plant.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, nil, {class: 'control-label'} %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :category, nil, {class: 'control-label'} %>
    <div class="controls">
      <%= f.collection_select :category_id, Category.all, :id, :name, prompt: true %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :price, nil, {class: 'control-label'} %>
    <div class="controls">
      <%= f.number_field :price %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :active, nil, {class: 'control-label'} %>
    <div class="controls">
      <%= f.check_box :active %>
    </div>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
