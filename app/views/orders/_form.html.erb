<%= form_for(@order, {html: {class: 'form-horizontal'}}) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :customer_name, nil, {class: 'control-label'} %>
    <div class="controls">  
      <%= f.text_field :customer_name %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :customer_phone, nil, {class: 'control-label'} %>
    <div class="controls">  
      <%= f.text_field :customer_phone %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :payment_method, nil, {class: 'control-label'} %>
    <div class="controls">  
      <%= f.radio_button :payment_method, 'Cash' %> Cash <br />
      <%= f.radio_button :payment_method, 'Cheque' %> Cheque 
    </div>
  </div>
  <div class="control-group">
    <%= f.label :cheque_number, nil, {class: 'control-label'} %>
    <div class="controls">  
      <%= f.text_field :cheque_number %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :status, nil, {class: 'control-label'} %>
    <div class="controls">  
      <%= f.select :status, Order::STATUS %>
    </div>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
