<h1>Customers</h1>

<p><%= link_to 'New Customer', new_customer_path %></p>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Phone</th>
    <th></th>
  </tr>

<% @customers.each do |customer| %>
  <tr>
    <td><%= customer.name %></td>
    <td><%= customer.phone %></td>
    <td><%= link_to 'Show', customer %> | <%= link_to 'Edit', edit_customer_path(customer) %> | <%= link_to 'Destroy', customer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

