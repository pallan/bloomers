<h1>Categories</h1>

<p><%= link_to 'New Category', new_category_path, class: 'btn btn-success' %></p>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= link_to image_tag('magnifier.png'), category %> <%= link_to image_tag('pencil.png'), edit_category_path(category) %> <%= link_to image_tag('delete.png'), category, confirm: 'Are you sure?', method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

