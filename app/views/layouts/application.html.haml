!!! 5
%html
  %head
    %title Mommy's Bloomers Application
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = yield(:head)
    = csrf_meta_tag
    = yield :js
  %body
    
    .navbar
      .navbar-inner
        .container
          %a.brand{:href => "/"} Bloomers Orders!
          
          %ul.nav
            %li= link_to "Home", '/'
            %li= link_to "Customers", customers_path
            %li= link_to "Plants", plants_path
            %li= link_to "Orders", orders_path
            %li= link_to "Reports", reports_index_path

    .container

      .content
        = yield

    #dialog_container
      = yield :dialogs
