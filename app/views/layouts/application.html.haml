!!! 5
%html
  %head
    %title Mommy's Bloomers Application
    = stylesheet_link_tag 'application'
    = javascript_include_tag 'application'
    = yield(:head)
    = csrf_meta_tag
    = yield :js
  %body

    .navbar.navbar-inverse
      .navbar-inner
        .container
          %a.brand{:href => "/"} Bloomers Orders!

          %ul.nav
            %li= link_to "Home", '/'
            %li= link_to "Customers", customers_path
            %li= link_to "Plants", plants_path
            %li.dropdown
              = link_to "Orders", '#', {"class" => 'dropdown-toggle', "data-toggle" => 'dropdown' }
              %ul.dropdown-menu
                - Group.all.each do |group|
                  %li= link_to group.label, group_orders_path(group)
            %li= link_to "Reports", reports_index_path

    .container

      .content
        = yield

    #dialog_container
      = yield :dialogs
